using System;
using System.Collections.Generic;
public class Program {
  public int FirstNonRepeatingCharacter(string str) {
    Dictionary<char, int> d=new Dictionary<char, int>();
      foreach(char c in str)
      {
          if(d.ContainsKey(c))
          {
              d[c]++;
          }
          else{
              d[c]=1;
          }
      }
      for (int i = 0; i < str.Length; i++) {
            if (d[str[i]] == 1) {
                return i;
            }
        }
    return -1;
  }
}
